<odoo>
    <record id="view_asset_stock_movement_report_tree" model="ir.ui.view">
        <field name="name">asset.stock.movement.report.tree</field>
        <field name="model">asset.stock.movement.report</field>
        <field name="arch" type="xml">
            <list>
                <field name="date"/>
                <field name="asset_id"/>
                <field name="employee_id"/>
                <field name="movement_type"/>
                <field name="user_id"/>
            </list>
        </field>
    </record>

    <record id="view_asset_stock_movement_report_search" model="ir.ui.view">
        <field name="name">asset.stock.movement.report.search</field>
        <field name="model">asset.stock.movement.report</field>
        <field name="arch" type="xml">
            <search>
                <field name="asset_id"/>
                <field name="employee_id"/>
                <field name="user_id"/>
                <filter string="Assigned" name="assigned" domain="[('movement_type', '=', 'assign')]"/>
                <filter string="Returned" name="returned" domain="[('movement_type', '=', 'return')]"/>
                <group expand="0" string="Group By">
                    <filter string="Asset" name="group_by_asset" context="{'group_by': 'asset_id'}"/>
                    <filter string="Employee" name="group_by_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Movement Type" name="group_by_movement" context="{'group_by': 'movement_type'}"/>
                    <filter string="Date" name="group_by_date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_asset_stock_movement_report_graph" model="ir.ui.view">
        <field name="name">asset.stock.movement.report.graph</field>
        <field name="model">asset.stock.movement.report</field>
        <field name="arch" type="xml">
            <graph string="Stock Movements" type="bar">
                <field name="asset_id"/>
                <field name="movement_type"/>
            </graph>
        </field>
    </record>

    <record id="action_asset_stock_movement_report" model="ir.actions.act_window">
        <field name="name">Stock Movements</field>
        <field name="res_model">asset.stock.movement.report</field>
        <field name="view_mode">list,graph</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No stock movements found
            </p>
        </field>
    </record>

    <menuitem id="menu_asset_stock_movement_report"
              name="Stock Movements"
              parent="menu_asset_root"
              action="action_asset_stock_movement_report"
              groups="assets_user_group,assets_admin_group,base.group_system"
              sequence="60"/>
</odoo>